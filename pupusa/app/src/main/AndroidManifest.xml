<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pupusa">

    <!-- 인터넷 권한 설정 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 인터넷 연결 확인 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_hangbae_foreground"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Pupusa">
        <activity
            android:name=".SplashActivity"
            android:theme="@style/Theme.Pupusa.Splash"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.pupusa.UserLogin"/>
        <activity android:name="com.example.pupusa.UserJoin"/>
        <activity android:name="com.example.pupusa.TestActivity"/>
        <activity android:name="com.example.pupusa.AddressApiActivity"/>
        <activity android:name="com.example.pupusa.AlertActivity"/>
        <activity android:name="com.example.pupusa.MainActivity"/>
        <activity android:name="com.example.pupusa.ChattingActivity"/>

    </application>

</manifest>