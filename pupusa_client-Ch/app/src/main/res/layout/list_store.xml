<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/iv_store_select_list"
        android:layout_width="115dp"
        android:layout_height="84dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="85dp"
        android:layout_weight="4"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_store_select_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="TextView"
            android:textSize="15dp" />
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="85dp"
            android:layout_weight="4"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_star_store"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="별점 : "
                android:textSize="10dp" />
            <!-- 별점 나오는 텍스트뷰 -->
        <TextView
            android:id="@+id/tv_store_select_text2"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:text="TextView"
            android:textSize="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_weight="4"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_pickup_charge"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="배달 요금 : "
                android:textSize="10dp" />
            <!-- 배달 요금 나오는 텍스트뷰 -->

            <TextView
                android:id="@+id/tv_store_select_text3"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:text="TextView"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/tv_pickup_time"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="배달 시간 : "
                android:textSize="10dp" />
            <!-- 배달 시간 나오는 텍스트뷰 -->
            <TextView
                android:id="@+id/tv_store_select_text4"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:text="TextView"
                android:textSize="10dp" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>