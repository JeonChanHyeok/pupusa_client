<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/include"
            layout="@layout/toolbar_confirnpayment" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/include">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_confirm_payment_store_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:gravity="center"
                    android:text="땅땅 치킨"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_confirm_payment_info_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="주문 정보"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_confirm_payment_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:text="부산광역시 남구 문현동 189-69"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/tv_confirm_payment_detail_address"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/btn_round"
                    android:paddingLeft="10dp"
                    android:text="3층(입력칸)"
                    android:textColor="@color/black"
                    android:textSize="13dp"
                    app:layout_constraintStart_toStartOf="@+id/tv_confirm_payment_address"
                    app:layout_constraintTop_toBottomOf="@id/tv_confirm_payment_address" />

                <TextView
                    android:id="@+id/tv_confirm_payment_order_request"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:text="주문 요청사항"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <CheckBox
                    android:id="@+id/cb_confirm_payment_door"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="15dp"
                    android:background="#fff7dc"
                    android:buttonTint="#FCD12A"
                    android:text="문앞에 놓고 가주세요" />

                <CheckBox
                    android:id="@+id/cb_confirm_payment_oneday"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#fff7dc"
                    android:buttonTint="#FCD12A"
                    android:text="일회용 수저, 포크가 필요해요" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_confirm_payment_request_dialog"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/btn_round"
                    android:drawableRight="@drawable/confirm_payment_btn_request"
                    android:gravity="left|center"
                    android:outlineProvider="none"
                    android:paddingLeft="10dp"
                    android:text="요청사항을 선택하세요"
                    android:textColor="@color/black"
                    android:textSize="12dp" />

                <EditText
                    android:id="@+id/et_confirm_payment_request_input"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/btn_round"
                    android:gravity="top"
                    android:hint="주문시 요청사항을 입력하세요."
                    android:paddingLeft="10dp"
                    android:paddingTop="8dp"
                    android:textSize="12dp"
                    android:visibility="gone" />

                <View
                    android:id="@+id/view1"
                    android:layout_width="match_parent"
                    android:layout_height="9dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginBottom="8dp"
                    android:background="@color/white_gray"
                    app:layout_constraintTop_toBottomOf="@id/et_confirm_payment_request_input" />

                <TextView
                    android:id="@+id/tv_confirm_payment_payment_method"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:text="결제 수단"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_confirm_payment_payco"
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/btn_change_color"
                        android:clickable="true"
                        android:onClick="paymentMethodButtonClicked"
                        android:outlineProvider="none"
                        android:text="페이코"
                        android:textColor="@color/black" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_confirm_payment_toss"
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/btn_change_color"
                        android:clickable="true"
                        android:onClick="paymentMethodButtonClicked"
                        android:outlineProvider="none"
                        android:text="토스"
                        android:textColor="@color/black" />
                </LinearLayout>


                <View
                    android:id="@+id/view2"
                    android:layout_width="match_parent"
                    android:layout_height="9dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginBottom="8dp"
                    android:background="@color/white_gray" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="15dp">

                    <TextView
                        android:id="@+id/tv_confirm_payment_discount_method"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="쿠폰함"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_confirm_payment_goto_coupon"
                        android:layout_width="70dp"
                        android:layout_height="20dp"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="12dp"
                        android:background="@drawable/btn_round"
                        android:outlineProvider="none"
                        android:text="보유쿠폰 n장"
                        android:textColor="@color/black"
                        android:textSize="8dp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/tv_confirm_payment_coupon_code"
                        android:layout_width="260dp"
                        android:layout_height="40dp"
                        android:background="@drawable/round_border"
                        android:hint="쿠폰코드 입력"
                        android:paddingLeft="10dp"
                        android:textColor="@color/black"
                        android:textSize="12dp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_confirm_payment_apply"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:background="@drawable/round_border"
                        android:backgroundTint="#FCD12A"
                        android:outlineProvider="none"
                        android:text="적용"
                        android:textColor="@color/white"
                        android:textSize="17dp"
                        android:textStyle="bold" />
                </LinearLayout>


                <View
                    android:id="@+id/view3"
                    android:layout_width="match_parent"
                    android:layout_height="9dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginBottom="8dp"
                    android:background="@color/white_gray" />

                <!--배달주문내역 부분-->
                <TextView
                    android:id="@+id/tv_confirm_payment_order_history"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:text="배달 주문 내역"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/dot_line"
                    android:layerType="software" />

                <!--총 배달 주문 내역-->
                <TextView
                    android:id="@+id/tv_confirm_payment_amount_order_history"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:text="총 주문내역"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <ListView
                    android:id="@+id/ll_confirm_payment_amount_order_history"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:divider="#FFFFFF"
                    android:dividerHeight="0dp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/dot_line"
                    android:layerType="software" />

                <!--총 배달요금-->
                <LinearLayout
                    android:id="@+id/ll_confirm_payment_delivery_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_confirm_payment_delivery_price_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="총 배달요금"
                        android:textColor="@color/black"
                        android:textSize="13dp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tv_confirm_payment_delivery_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3000"
                        android:textColor="@color/black"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/tv_confirm_payment_delivery_price_won"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="원"
                        android:textColor="@color/black"
                        android:textSize="14dp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/dot_line"
                    android:layerType="software" />

                <!--총 결제 금액-->
                <LinearLayout
                    android:id="@+id/ll_confirm_payment_amount_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_confirm_payment_amount_price_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="총 결제 금액"
                        android:textColor="@color/black"
                        android:textSize="15dp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tv_confirm_payment_amount_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="67000"
                        android:textColor="@color/black"
                        android:textSize="14dp" />


                    <TextView
                        android:id="@+id/tv_confirm_payment_amount_price_won"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="원"
                        android:textColor="@color/black"
                        android:textSize="14dp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/dot_line"
                    android:layerType="software"
                    app:layout_constraintLeft_toLeftOf="@id/ll_confirm_payment_amount_price"
                    app:layout_constraintStart_toStartOf="@+id/ll_confirm_payment_amount_price"
                    app:layout_constraintTop_toBottomOf="@id/ll_confirm_payment_amount_price" />


                <!--나의 배달 주문 내역-->
                <TextView
                    android:id="@+id/tv_confirm_payment_my_order_history"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="25dp"
                    android:text="나의 주문내역"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <ListView
                    android:id="@+id/ll_confirm_payment_my_order_history"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:divider="#FFFFFF"
                    android:dividerHeight="0dp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/dot_line"
                    android:layerType="software" />

                <!--나의 배달 요금-->
                <LinearLayout
                    android:id="@+id/ll_confirm_payment_my_delivery_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_confirm_payment_my_delivery_price_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="나의 배달요금"
                        android:textColor="@color/black"
                        android:textSize="13dp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tv_confirm_payment_my_delivery_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2000"
                        android:textColor="@color/black"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/tv_confirm_payment_my_delivery_price_won"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="원"
                        android:textColor="@color/black"
                        android:textSize="14dp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/dot_line"
                    android:layerType="software" />

                <!--나의 할인-->
                <LinearLayout
                    android:id="@+id/ll_confirm_payment_my_discount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_confirm_payment_my_discount_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="나의 할인"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="13dp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tv_confirm_payment_my_discount_minus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textColor="#ff0066"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/tv_confirm_payment_my_discount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2000"
                        android:textColor="#ff0066"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/tv_confirm_payment_my_discount_won"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="원"
                        android:textColor="#ff0066"
                        android:textSize="14dp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/dot_line"
                    android:layerType="software" />

                <!--나의 결제 금액-->
                <LinearLayout
                    android:id="@+id/ll_confirm_payment_my_amount_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_confirm_payment_my_amount_price_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="나의 결제 금액"
                        android:textColor="#FCD12A"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tv_confirm_payment_my_amount_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="23000"
                        android:textColor="#FCD12A"
                        android:textSize="22dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_confirm_payment_my_amount_price_won"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="원"
                        android:textColor="#FCD12A"
                        android:textSize="22dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <View
                    android:id="@+id/view4"
                    android:layout_width="match_parent"
                    android:layout_height="9dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="8dp"
                    android:background="@color/white_gray" />


                <ExpandableListView
                    android:id="@+id/el_confirm_payment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_confirm_payment_pay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/round_border"
                    android:backgroundTint="#FCD12A"
                    android:outlineProvider="none"
                    android:text="결제하기"
                    android:textColor="@color/white"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.drawerlayout.widget.DrawerLayout>