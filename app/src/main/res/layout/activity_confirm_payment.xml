<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include
                android:id="@+id/include"
                layout="@layout/toolbar_confirnpayment" />

            <TextView
                android:id="@+id/tv_confirm_payment_store_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="땅땅 치킨"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_margin="15dp"
                app:layout_constraintTop_toBottomOf="@id/include"/>

            <TextView
                android:id="@+id/tv_confirm_payment_info_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="주문 정보"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/tv_confirm_payment_store_name"
                app:layout_constraintTop_toBottomOf="@id/tv_confirm_payment_store_name" />

            <TextView
                android:id="@+id/tv_confirm_payment_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="부산광역시 남구 문현동 189-69"
                android:textColor="@color/black"
                android:textSize="16dp"
                app:layout_constraintStart_toStartOf="@+id/tv_confirm_payment_info_order"
                app:layout_constraintTop_toBottomOf="@id/tv_confirm_payment_info_order" />

            <EditText
                android:id="@+id/tv_confirm_payment_detail_address"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="3층(입력칸)"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:textColor="@color/black"
                android:layout_marginTop="8dp"
                android:textSize="13dp"
                android:paddingLeft="10dp"
                android:background="@drawable/btn_round"
                app:layout_constraintStart_toStartOf="@+id/tv_confirm_payment_address"
                app:layout_constraintTop_toBottomOf="@id/tv_confirm_payment_address" />

            <TextView
                android:id="@+id/tv_confirm_payment_order_request"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="주문 요청사항"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="@+id/tv_confirm_payment_detail_address"
                app:layout_constraintTop_toBottomOf="@id/tv_confirm_payment_detail_address" />

            <CheckBox
                android:id="@+id/cb_confirm_payment_door"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="15dp"
                android:background="#fff7dc"
                android:buttonTint="#FCD12A"
                android:text="문앞에 놓고 가주세요"
                app:layout_constraintStart_toStartOf="@+id/tv_confirm_payment_order_request"
                app:layout_constraintTop_toBottomOf="@id/tv_confirm_payment_order_request" />

            <CheckBox
                android:id="@+id/cb_confirm_payment_oneday"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:background="#fff7dc"
                android:buttonTint="#FCD12A"
                android:text="일회용 수저, 포크가 필요해요"
                app:layout_constraintStart_toStartOf="@+id/cb_confirm_payment_door"
                app:layout_constraintTop_toBottomOf="@id/cb_confirm_payment_door" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_confirm_payment_request_dialog"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="요청사항을 선택하세요"
                android:gravity="left|center"
                android:textColor="@color/black"
                android:paddingLeft="10dp"
                android:drawableRight="@drawable/confirm_payment_btn_request"
                android:textSize="12dp"
                android:outlineProvider="none"
                android:background="@drawable/btn_round"
                app:layout_constraintStart_toStartOf="@+id/cb_confirm_payment_oneday"
                app:layout_constraintTop_toBottomOf="@id/cb_confirm_payment_oneday" />

            <EditText
                android:id="@+id/et_confirm_payment_request_input"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="8dp"
                android:paddingLeft="10dp"
                android:gravity="top"
                android:paddingTop="8dp"
                android:textSize="12dp"
                android:visibility="gone"
                android:background="@drawable/btn_round"
                android:hint="주문시 요청사항을 입력하세요."
                app:layout_constraintTop_toBottomOf="@+id/btn_confirm_payment_request_dialog"/>

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="9dp"
                android:background="@color/white_gray"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintTop_toBottomOf="@id/et_confirm_payment_request_input"/>

            <TextView
                android:id="@+id/tv_confirm_payment_payment_method"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="결제 수단"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="16dp"
                app:layout_constraintStart_toStartOf="@+id/tv_confirm_payment_info_order"
                app:layout_constraintTop_toBottomOf="@id/view1" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_confirm_payment_payco"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:text="페이코"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:outlineProvider="none"
                android:clickable="true"
                android:onClick="paymentMethodButtonClicked"
                android:background="@drawable/btn_change_color"
                app:layout_constraintStart_toStartOf="@+id/tv_confirm_payment_payment_method"
                app:layout_constraintTop_toBottomOf="@id/tv_confirm_payment_payment_method" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_confirm_payment_toss"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:text="토스"
                android:textColor="@color/black"
                android:outlineProvider="none"
                android:onClick="paymentMethodButtonClicked"
                android:clickable="true"
                android:background="@drawable/btn_change_color"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toRightOf="@id/btn_confirm_payment_payco"
                app:layout_constraintTop_toTopOf="@+id/btn_confirm_payment_payco" />

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="9dp"
                android:background="@color/white_gray"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintTop_toBottomOf="@id/btn_confirm_payment_payco"/>

            <TextView
                android:id="@+id/tv_confirm_payment_discount_method"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="쿠폰함"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="@+id/tv_confirm_payment_payment_method"
                app:layout_constraintTop_toBottomOf="@id/view2" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_confirm_payment_goto_coupon"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="12dp"
                android:text="보유쿠폰 n장"
                android:textColor="@color/black"
                android:outlineProvider="none"
                android:textSize="8dp"
                android:background="@drawable/btn_round"
                app:layout_constraintBottom_toBottomOf="@+id/tv_confirm_payment_discount_method"
                app:layout_constraintStart_toEndOf="@+id/tv_confirm_payment_discount_method"
                app:layout_constraintTop_toTopOf="@+id/tv_confirm_payment_discount_method" />

            <EditText
                android:id="@+id/tv_confirm_payment_coupon_code"
                android:layout_width="260dp"
                android:layout_height="40dp"
                android:hint="쿠폰코드 입력"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:paddingLeft="10dp"
                android:background="@drawable/round_border"
                android:layout_marginTop="15dp"
                app:layout_constraintStart_toStartOf="@+id/tv_confirm_payment_discount_method"
                app:layout_constraintTop_toBottomOf="@id/tv_confirm_payment_discount_method" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_confirm_payment_apply"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="적용"
                android:textSize="17dp"
                android:textStyle="bold"
                android:backgroundTint="#FCD12A"
                android:textColor="@color/white"
                android:outlineProvider="none"
                android:background="@drawable/round_border"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_confirm_payment_coupon_code"
                app:layout_constraintTop_toTopOf="@+id/tv_confirm_payment_coupon_code" />

            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="9dp"
                android:background="@color/white_gray"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintTop_toBottomOf="@id/btn_confirm_payment_apply"/>

            <!--배달주문내역 부분-->
            <TextView
                android:id="@+id/tv_confirm_payment_order_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="배달 주문 내역"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/tv_confirm_payment_discount_method"
                app:layout_constraintTop_toBottomOf="@id/view3" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:background="@drawable/dot_line"
                android:layerType="software"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                app:layout_constraintLeft_toLeftOf="@id/tv_confirm_payment_order_history"
                app:layout_constraintStart_toStartOf="@+id/tv_confirm_payment_order_history"
                app:layout_constraintTop_toBottomOf="@id/tv_confirm_payment_order_history" />

            <!--총 배달 주문 내역-->
            <TextView
                android:id="@+id/tv_confirm_payment_amount_order_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="총 주문내역"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="@+id/tv_confirm_payment_order_history"
                app:layout_constraintTop_toBottomOf="@id/tv_confirm_payment_order_history" />

            <ListView
                android:id="@+id/ll_confirm_payment_amount_order_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:dividerHeight="0dp"
                android:divider="#FFFFFF"
                app:layout_constraintStart_toStartOf="@+id/tv_confirm_payment_amount_order_history"
                app:layout_constraintTop_toBottomOf="@+id/tv_confirm_payment_amount_order_history" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/dot_line"
                android:layerType="software"
                app:layout_constraintLeft_toLeftOf="@id/ll_confirm_payment_amount_order_history"
                app:layout_constraintStart_toStartOf="@+id/ll_confirm_payment_amount_order_history"
                app:layout_constraintTop_toBottomOf="@id/ll_confirm_payment_amount_order_history" />

            <!--총 배달요금-->
            <LinearLayout
                android:id="@+id/ll_confirm_payment_delivery_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@+id/ll_confirm_payment_amount_order_history"
                app:layout_constraintLeft_toLeftOf="@id/ll_confirm_payment_amount_order_history"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_confirm_payment_delivery_price_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="총 배달요금"
                    android:textSize="13dp"
                    android:textColor="@color/black" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/tv_confirm_payment_delivery_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    android:text="3000" />

                <TextView
                    android:id="@+id/tv_confirm_payment_delivery_price_won"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    android:text="원" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/dot_line"
                android:layerType="software"
                app:layout_constraintLeft_toLeftOf="@id/ll_confirm_payment_delivery_price"
                app:layout_constraintStart_toStartOf="@+id/ll_confirm_payment_delivery_price"
                app:layout_constraintTop_toBottomOf="@id/ll_confirm_payment_delivery_price" />

            <!--총 결제 금액-->
            <LinearLayout
                android:id="@+id/ll_confirm_payment_amount_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="@+id/ll_confirm_payment_delivery_price"
                app:layout_constraintTop_toBottomOf="@id/ll_confirm_payment_delivery_price"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp">

                <TextView
                    android:id="@+id/tv_confirm_payment_amount_price_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="총 결제 금액"
                    android:textSize="15dp"
                    android:textColor="@color/black" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/tv_confirm_payment_amount_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    android:text="67000" />


                <TextView
                    android:id="@+id/tv_confirm_payment_amount_price_won"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    android:text="원" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/dot_line"
                android:layout_marginRight="15dp"
                android:layerType="software"
                app:layout_constraintLeft_toLeftOf="@id/ll_confirm_payment_amount_price"
                app:layout_constraintStart_toStartOf="@+id/ll_confirm_payment_amount_price"
                app:layout_constraintTop_toBottomOf="@id/ll_confirm_payment_amount_price" />


            <!--나의 배달 주문 내역-->
            <TextView
                android:id="@+id/tv_confirm_payment_my_order_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="나의 주문내역"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:layout_marginTop="25dp"
                app:layout_constraintStart_toStartOf="@+id/ll_confirm_payment_amount_price"
                app:layout_constraintTop_toBottomOf="@id/ll_confirm_payment_amount_price" />

            <ListView
                android:id="@+id/ll_confirm_payment_my_order_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:divider="#FFFFFF"
                android:dividerHeight="0dp"
                app:layout_constraintStart_toStartOf="@+id/tv_confirm_payment_my_order_history"
                app:layout_constraintTop_toBottomOf="@+id/tv_confirm_payment_my_order_history" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/dot_line"
                android:layerType="software"
                app:layout_constraintLeft_toLeftOf="@id/ll_confirm_payment_my_order_history"
                app:layout_constraintStart_toStartOf="@+id/ll_confirm_payment_my_order_history"
                app:layout_constraintTop_toBottomOf="@id/ll_confirm_payment_my_order_history" />

            <!--나의 배달 요금-->
            <LinearLayout
                android:id="@+id/ll_confirm_payment_my_delivery_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                app:layout_constraintRight_toRightOf="@+id/ll_confirm_payment_my_order_history"
                app:layout_constraintStart_toStartOf="@+id/ll_confirm_payment_my_order_history"
                app:layout_constraintTop_toBottomOf="@+id/ll_confirm_payment_my_order_history">

                <TextView
                    android:id="@+id/tv_confirm_payment_my_delivery_price_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="나의 배달요금"
                    android:textColor="@color/black"
                    android:textSize="13dp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_confirm_payment_my_delivery_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    android:text="2000" />

                <TextView
                    android:id="@+id/tv_confirm_payment_my_delivery_price_won"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    android:text="원" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/dot_line"
                android:layerType="software"
                app:layout_constraintLeft_toLeftOf="@id/ll_confirm_payment_my_delivery_price"
                app:layout_constraintStart_toStartOf="@+id/ll_confirm_payment_my_delivery_price"
                app:layout_constraintTop_toBottomOf="@id/ll_confirm_payment_my_delivery_price" />

            <!--나의 할인-->
            <LinearLayout
                android:id="@+id/ll_confirm_payment_my_discount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                app:layout_constraintRight_toRightOf="@+id/ll_confirm_payment_my_delivery_price"
                app:layout_constraintStart_toStartOf="@+id/ll_confirm_payment_my_delivery_price"
                app:layout_constraintTop_toBottomOf="@+id/ll_confirm_payment_my_delivery_price">

                <TextView
                    android:id="@+id/tv_confirm_payment_my_discount_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="나의 할인"
                    android:textColor="@color/black"
                    android:textSize="13dp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_confirm_payment_my_discount_minus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    android:text="-" />

                <TextView
                    android:id="@+id/tv_confirm_payment_my_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    android:text="2000" />

                <TextView
                    android:id="@+id/tv_confirm_payment_my_discount_won"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    android:text="원" />
            </LinearLayout>
            <!--나의 결제 금액-->
            <LinearLayout
                android:id="@+id/ll_confirm_payment_my_amount_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                app:layout_constraintStart_toStartOf="@+id/ll_confirm_payment_my_discount"
                app:layout_constraintTop_toBottomOf="@+id/ll_confirm_payment_my_discount">

                <TextView
                    android:id="@+id/tv_confirm_payment_my_amount_price_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="나의 결제 금액"
                    android:textColor="#FCD12A"
                    android:textStyle="bold"
                    android:textSize="15dp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_confirm_payment_my_amount_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22dp"
                    android:textColor="#FCD12A"
                    android:textStyle="bold"
                    android:text="23000" />

                <TextView
                    android:id="@+id/tv_confirm_payment_my_amount_price_won"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:textColor="#FCD12A"
                    android:text="원" />
            </LinearLayout>

            <View
                android:id="@+id/view4"
                android:layout_width="match_parent"
                android:layout_height="9dp"
