<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#ffffff"
    android:screenOrientation="portrait"
    app:rippleColor="@color/popcorn"

    >
    <include
        android:id="@+id/include"
        layout="@layout/toolbar_main"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />


    <ImageView
        android:id="@+id/iv_user_face"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="128dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <Button
        android:background="#FFE695"
        android:id="@+id/btn_pwd_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="변경하기"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/et_pwd_second_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.569"
        app:layout_constraintStart_toEndOf="@+id/et_pwd_second_text"
        app:layout_constraintTop_toTopOf="@+id/et_pwd_second_text"
        app:layout_constraintVertical_bias="0.55"
        app:rippleColor="@color/popcorn"
        app:strokeColor="#915555" />

    <TextView
        android:id="@+id/tv_pwd_second_text"
        android:layout_width="109dp"
        android:layout_height="24dp"
        android:layout_marginTop="48dp"
        android:text="비밀번호 변경"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/et_pwd_second_text"
        app:layout_constraintEnd_toEndOf="@+id/tv_pwd_frist_text"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@id/tv_user_name"
        app:layout_constraintRight_toRightOf="@id/tv_user_name"
        app:layout_constraintStart_toStartOf="@+id/tv_pwd_frist_text"
        app:layout_constraintTop_toBottomOf="@+id/tv_pwd_frist_text"
        app:layout_constraintVertical_bias="0.812" />

    <EditText
        android:id="@+id/et_pwd_frist_text"
        android:layout_width="132dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/black"
        android:ems="10"
        android:hint="비밀번호 입력"
        android:textSize="10dp"
        android:inputType="textPassword"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/tv_pwd_second_text"
        app:layout_constraintEnd_toEndOf="@+id/tv_user_name"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="@+id/tv_user_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_pwd_frist_text"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_pwd_frist_text"
        android:layout_width="89dp"
        android:layout_height="28dp"
        android:text="기존 비밀번호"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.392"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.384" />

    <EditText
        android:id="@+id/et_pwd_second_text"
        android:layout_width="132dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/black"
        android:ems="10"
        android:hint="변경할 비밀번호입력"
        android:textSize="10dp"
        android:inputType="textPassword"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/tv_address_input"
        app:layout_constraintEnd_toEndOf="@+id/et_pwd_frist_text"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/et_pwd_frist_text"
        app:layout_constraintTop_toBottomOf="@+id/tv_user_name"
        app:layout_constraintVertical_bias="0.817" />

    <Button
        android:id="@+id/btn_address_find"
        android:layout_width="93dp"
        android:layout_height="42dp"
        android:background="#FFE695"
        android:text="주소찾기"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/tv_address_input"
        app:layout_constraintEnd_toEndOf="@+id/btn_pwd_update"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/btn_pwd_update"
        app:layout_constraintTop_toTopOf="@+id/tv_address_input"
        app:layout_constraintVertical_bias="0.0"
        />

    <TextView
        android:id="@+id/tv_address_input"
        android:layout_width="158dp"
        android:layout_height="26dp"
        android:hint="주소 입력"
        android:textSize="12dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/et_pwd_second_text"
        app:layout_constraintStart_toStartOf="@+id/et_pwd_second_text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.7" />

    <TextView
        android:id="@+id/tv_marketing_sns"
        android:layout_width="88dp"
        android:layout_height="25dp"
        android:layout_marginTop="28dp"
        android:text="SNS 수신 동의 "

        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/tv_marketing"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_marketing_info"
        app:layout_constraintTop_toBottomOf="@+id/tv_marketing" />

    <CheckBox
        android:id="@+id/cb_info_accept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/tv_marketing_sns"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.557"
        app:layout_constraintStart_toEndOf="@+id/tv_marketing_sns"
        app:layout_constraintTop_toTopOf="@+id/tv_marketing_sns"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tv_marketing_info"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이벤트 및 혜택에 대한 정보를 받으실 수 있어요"
        android:textColor="@color/black"
        android:textSize="9dp"
        app:layout_constraintEnd_toEndOf="@+id/tv_marketing"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_marketing"
        app:layout_constraintTop_toBottomOf="@+id/tv_marketing" />

    <TextView
        android:id="@+id/tv_marketing"
        android:layout_width="118dp"
        android:layout_height="21dp"
        android:layout_marginTop="4dp"
        android:text="마케팅 수신 동의"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/tv_address"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_address"
        app:layout_constraintTop_toBottomOf="@+id/tv_address" />

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="46dp"
        android:layout_height="29dp"
        android:layout_marginEnd="4dp"
        android:text="주소"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/tv_address_input"
        app:layout_constraintEnd_toStartOf="@+id/tv_address_input"
        app:layout_constraintHorizontal_bias="0.789"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_address_input"
        app:layout_constraintVertical_bias="0.666" />

    <TextView
        android:id="@+id/tv_marketing_alarm"
        android:layout_width="90dp"
        android:layout_height="25dp"
        android:text="알림설정"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/tv_marketing_sns"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_marketing_info"
        app:layout_constraintTop_toBottomOf="@+id/tv_marketing_sns" />

    <Button
        android:id="@+id/btn_user_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:background="#FFE695"
        android:text="회원탈퇴"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btn_address_find"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/btn_address_find"
        app:layout_constraintTop_toBottomOf="@+id/btn_address_find"
        app:layout_constraintVertical_bias="0.891" />

    <CheckBox
        android:id="@+id/cb_info_accept2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/tv_marketing_alarm"
        app:layout_constraintEnd_toEndOf="@+id/cb_info_accept"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/cb_info_accept"
        app:layout_constraintTop_toTopOf="@+id/tv_marketing_alarm"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:textColor="@color/black"
        android:id="@+id/tv_user_name"
        android:layout_width="121dp"
        android:layout_height="27dp"
        android:text="전찬혁님"

        app:layout_constraintEnd_toEndOf="@+id/iv_user_face"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintStart_toStartOf="@+id/iv_user_face"
        app:layout_constraintTop_toBottomOf="@id/iv_user_face" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="143dp"
        android:layout_height="20dp"
        android:layout_marginTop="2dp"
        android:text=""
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/et_pwd_second_text"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/et_pwd_second_text"
        app:layout_constraintTop_toBottomOf="@+id/et_pwd_second_text" />


    <ImageView
        android:id="@+id/iv_pwd_check"
        android:layout_width="42dp"
        android:layout_height="43dp"

        app:layout_constraintBottom_toBottomOf="@+id/tv_pwd_second_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/tv_pwd_second_text"
        app:layout_constraintTop_toTopOf="@+id/tv_pwd_second_text"
        app:layout_constraintVertical_bias="0.526" />

</androidx.constraintlayout.widget.ConstraintLayout>