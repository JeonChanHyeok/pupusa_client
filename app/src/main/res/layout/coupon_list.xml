<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/include"
        layout="@layout/toolbar_coupon"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_coupon_list_coupon"
        android:layout_width="399dp"
        android:layout_height="86dp"
        android:text="+ 쿠폰 등록하기"
        android:textSize="20sp"
        android:background="@color/popcorn"

        app:layout_constraintEnd_toEndOf="@+id/et_coupon_list_coupon"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/et_coupon_list_coupon"
        app:layout_constraintTop_toBottomOf="@+id/et_coupon_list_coupon" />

    <ImageView
        android:id="@+id/iv_coupon_list_coupon"
        android:layout_width="468dp"
        android:layout_height="182dp"
        android:layout_marginTop="16dp"
        android:scaleType="fitCenter"
        android:src="@drawable/coupon3"
        app:layout_constraintEnd_toEndOf="@+id/btn_coupon_list_coupon"
        app:layout_constraintHorizontal_bias="0.544"
        app:layout_constraintStart_toStartOf="@+id/btn_coupon_list_coupon"
        app:layout_constraintTop_toBottomOf="@+id/btn_coupon_list_coupon" />

    <EditText
        android:id="@+id/et_coupon_list_coupon"
        android:layout_width="398dp"
        android:layout_height="72dp"
        android:layout_marginTop="60dp"
        android:hint="쿠폰을 입력하세요"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>