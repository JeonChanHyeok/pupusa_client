<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/include"
            layout="@layout/toolbar_writereivew" />

        <TextView
            android:id="@+id/tv_write_review_menu_name"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center|center_vertical|center_horizontal"
            android:text="메뉴이름"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/include" />

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="9dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="8dp"
            android:background="@color/white_gray"
            app:layout_constraintTop_toBottomOf="@id/tv_write_review_menu_name" />

        <TextView
            android:id="@+id/tv_write_review"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal"
            android:text="이 가게에 대한 상세한 평가를 해주세요"
            app:layout_constraintTop_toBottomOf="@id/view1" />


        <LinearLayout
            android:id="@+id/ll_write_review_taste"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/tv_write_review">

            <View
                android:layout_width="70dp"
                android:layout_height="0dp" />

            <TextView
                android:id="@+id/tv_write_review_taste"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="맛"
                android:textSize="17dp"
                android:textColor="@color/black" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <RatingBar
                android:id="@+id/rb_write_review_taste"
                style="?android:attr/ratingBarStyleIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:isIndicator="false"
                android:numStars="5"
                android:progressTint="#FCD12A"
                android:rating="0.0"
                android:stepSize="1" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_write_review_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/ll_write_review_taste">

            <View
                android:layout_width="70dp"
                android:layout_height="0dp" />

            <TextView
                android:id="@+id/tv_write_review_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="양"
                android:textSize="17dp"
                android:textColor="@color/black" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <RatingBar
                android:id="@+id/rb_write_review_amount"
                style="?android:attr/ratingBarStyleIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:isIndicator="false"
                android:numStars="5"
                android:progressTint="#FCD12A"
                android:rating="0.0"
                android:stepSize="1" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_write_review_delivery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/ll_write_review_amount">

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_write_review_delivery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="배달"
                android:textSize="17dp"
                android:textColor="@color/black" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="0.9" />

            <RatingBar
                android:id="@+id/rb_write_review_delivery"
                style="?android:attr/ratingBarStyleIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:isIndicator="false"
                android:progressTint="#FCD12A"
                android:numStars="5"
                android:rating="0.0"
                android:stepSize="1" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

        </LinearLayout>

        <EditText
            android:id="@+id/et_write_review_content"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            app:layout_constraintTop_toBottomOf="@id/ll_write_review_delivery"
            android:layout_marginTop="50dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:gravity="top"
            android:background="@drawable/btn_round"
            android:textSize="13dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:hint="음식에 대한 솔직한 리뷰를 남겨주세요!"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_write_review_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/round_border"
            android:src="@drawable/ic_camera"
            app:layout_constraintTop_toBottomOf="@id/et_write_review_content"
            app:layout_constraintLeft_toLeftOf="@id/et_write_review_content"/>

<!--        <androidx.appcompat.widget.AppCompatImageButton-->
<!--            android:id="@+id/btn_write_review_image2"-->
<!--            android:layout_width="120dp"-->
<!--            android:layout_height="120dp"-->
<!--            android:background="@color/white"-->
<!--            android:src="@drawable/ic_camera"-->
<!--            app:layout_constraintLeft_toLeftOf="@id/et_write_review_content"-->
<!--            app:layout_constraintStart_toEndOf="@+id/btn_write_review_image"-->
<!--            app:layout_constraintTop_toTopOf="@+id/btn_write_review_image" />-->

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_write_review_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_border"
            android:backgroundTint="#FCD12A"
            android:outlineProvider="none"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="등록 완료"
            android:textColor="@color/white"
            android:textSize="17dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_write_review_image"
            tools:layout_editor_absoluteX="15dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.drawerlayout.widget.DrawerLayout>
