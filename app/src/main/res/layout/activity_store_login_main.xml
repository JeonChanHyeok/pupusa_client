<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".instore.StoreLoginActivity">
    <include
        android:id="@+id/include"
        layout="@layout/toolbar_store_select"/>

    <Button
        android:id="@+id/btn_store_name_input"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/edge4"
        android:text="확인"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/et_store_name_input"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_store_name_input"
        app:layout_constraintTop_toBottomOf="@+id/et_store_name_input" />

    <TextView
        android:id="@+id/tv_store_name_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="가게입력 : "
        app:layout_constraintBottom_toBottomOf="@+id/et_store_name_input"
        app:layout_constraintEnd_toStartOf="@+id/et_store_name_input"
        app:layout_constraintHorizontal_bias="0.761"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/et_store_name_input"
        app:layout_constraintVertical_bias="0.451" />

    <EditText
        android:id="@+id/et_store_name_input"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.691"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.273" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="234dp"
        android:layout_height="215dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_store_name_input"
        app:srcCompat="@drawable/img" />


</androidx.constraintlayout.widget.ConstraintLayout>