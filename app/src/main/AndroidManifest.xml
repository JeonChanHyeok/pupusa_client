<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.capston">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.Capston">
        <activity
            android:name=".my_page"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".order_history"/>
        <activity android:name=".service_center"/>
        <activity android:name=".my_review"/>
        <activity android:name=".create_chat_room"/>
        <activity android:name=".search_address"/>
        <activity android:name=".connect_address_api"/>
        <activity android:name=".information_chat_room"/>
        <activity android:name=".menu_list"/>
    </application>

    <!-- 인터넷 권한 설정   -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 인터넷 연결 확인-->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
</manifest>